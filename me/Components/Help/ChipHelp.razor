@using Syncfusion.Blazor.Buttons

<FluentMessageBar Title="Most chips are toggleable" Intent="@MessageIntent.Success">
    <SfChip @ref="_chip" Selection="SelectionType.Multiple">
        <ChipEvents OnClick="@((e) => { if (e.Text == "Toggle me") { _isHelpChipSelected = e.Selected; } })">
        </ChipEvents>
        <ChipItems>
            <ChipItem Text="Toggle me" CssClass="@(_isHelpChipSelected ? "e-primary" : "")"></ChipItem>
            <ChipItem Text="Filtered" CssClass="e-primary"></ChipItem>
        </ChipItems>
    </SfChip>
    <SfChip>
        <ChipItems>
            <ChipItem Text="Not Toggleable" CssClass="e-outline"></ChipItem>
        </ChipItems>
    </SfChip>
</FluentMessageBar>

@code {
    public SfChip? _chip { get; set; }
    private bool _isHelpChipSelected { get; set; } = true;

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _chip?.SelectChips(new[] { "Toggle me" });
        }
        return base.OnAfterRenderAsync(firstRender);
    }
}
